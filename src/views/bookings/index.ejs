<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Reservas</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Lista de Reservas</h1>

  <a href="/bookings/form">➕ Nova Reserva</a>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Funcionário</th>
        <th>Sala</th>
        <th>Início da Reserva</th>
        <th>Fim da Reserva</th> <th>Pessoas</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% if (bookings && bookings.length > 0) { %>
        <% bookings.forEach(booking => { %>
          <tr>
            <td><%= booking.id %></td>
            <td><%= booking.employee_nome %></td>
            <td><%= booking.numero_sala %></td>
            <td><%= new Date(booking.dia_hora_reserva).toLocaleString('pt-BR') %></td>
            <td><%= new Date(booking.dia_hora_fim_reserva).toLocaleString('pt-BR') %></td> <td><%= booking.num_pessoas %></td>
            <td>
              <a href="/bookings/form/<%= booking.id %>">✏️ Editar</a>
              |
              <a href="#" onclick="deletarReserva('<%= booking.id %>')">🗑️ Excluir</a>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="7">Nenhuma reserva cadastrada.</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <script src="/js/bookings.js"></script>
</body>
</html>