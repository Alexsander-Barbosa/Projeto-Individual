<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Funcionários</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Lista de Funcionários</h1>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Departamento</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% if (employees.length > 0) { %>
        <% employees.forEach(emp => { %>
          <tr>
            <td><%= emp.id %></td>
            <td><%= emp.nome %></td>
            <td><%= emp.departamento %></td>
            <td>
              </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="4">Nenhum funcionário cadastrado.</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  </body>
</html>